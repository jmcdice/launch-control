# Transcription service to use:
# Uncomment the desired transcription service type by removing the '#' symbol
# TRANSCRIPTION_SERVICE_TYPE=openai-whisper
TRANSCRIPTION_SERVICE_TYPE=google-chirp

# Gemini key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/application_default_credentials.json

# Audio Settings
AUDIO_DEVICE_INDEX=1
SAMPLE_RATE=44100
CHANNELS=1
AUDIO_THRESHOLD=0.005
SILENCE_THRESHOLD=1.0
MIN_RECORDING_DURATION=0.5
MAX_RECORDING_DURATION=30.0
PRE_ROLL_DURATION=0.5
POST_ROLL_DURATION=0.5

# Logging
LOG_LEVEL=DEBUG

# Project Paths
TRANSCRIPTIONS_DIR=data/transcriptions
AUDIO_DIR=data/audio
